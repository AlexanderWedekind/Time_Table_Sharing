{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./out",
    "sourceMap": true,
    "types": ["node", "vscode"],
    "noEmitOnError": false
},
  "include": ["./src"],
  "exclude": ["node_modules", ".vscode-test"]
}   